<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:clickable="true"
    android:focusable="true"
    android:elevation="30dp"
    android:foreground="?android:attr/selectableItemBackground"
    tools:context="br.iesb.androidiesb.controller.MostrarEscolas">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/txtNomeEscola"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOME DA ESCOLA"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtRede"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNomeEscola"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Rede"
            android:textSize="12dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/descEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtRede"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Email:"
            android:textSize="12dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/descEmail"
            android:layout_below="@+id/txtRede"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="escola@email.com"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="12dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/descEsfera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descEmail"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Esfera:"
            android:textSize="12dp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/txtEsfera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEmail"
            android:layout_toRightOf="@id/descEsfera"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="publica/privada"
            android:textSize="12dp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/descAlunos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descEsfera"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Quantidade de alunos:"
            android:textSize="12dp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/qtdAlunos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEsfera"
            android:layout_toRightOf="@id/descAlunos"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="Qtd alunos"
            android:textSize="12dp"
            android:textStyle="normal"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>